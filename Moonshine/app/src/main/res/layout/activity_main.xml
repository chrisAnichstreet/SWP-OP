<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="first.camera2.AndroidCameraApi"
    android:background="@drawable/moon">

    <TextureView
        android:id="@+id/texture"
        android:layout_width="145dp"
        android:layout_height="351dp"
        android:layout_above="@+id/btn_switchMode"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="291dp" />

    <Button
        android:id="@+id/btn_switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Undetect-Mode is OFF" />

    <TextView
        android:id="@+id/modeTextId"
        android:layout_width="240dp"
        android:layout_height="227dp"
        android:layout_alignBottom="@+id/texture"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="-141dp"
        android:textColor="#F3E70505" />

    <TextView
        android:id="@+id/infoTextId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/texture"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="-268dp"
        android:background="#000000"
        android:text="TextView"
        android:textColor="#F3E70505" />

</RelativeLayout>